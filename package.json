{
    "name": "vscode-bzr",
    "displayName": "vscode-bzr",
    "description": "Integrated Bazaar source control",
    "version": "0.0.1",
    "publisher": "azzar1",
    "engines": {
        "vscode": "^1.15.0"
    },
    "enableProposedApi": true,
    "homepage": "https://github.com/azzar1/vscode-bzr/blob/master/README.md",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/azzar1/vscode-bzr.git"
    },
    "bugs": {
        "url": "https://github.com/azzar1/vscode-bzr/issues"
    },
    "categories": [
        "SCM Providers",
        "Other"
    ],
    "keywords": [
        "bzr",
        "bazaar",
        "source",
        "scm"
    ],
    "icon": "icon.png",
    "activationEvents": [
        "*"
    ],
    "main": "./out/main",
    "contributes": {
        "commands": [
            {
                "command": "bzr.init",
                "title": "%command.init%",
                "category": "Bzr",
                "icon": {
                    "light": "resources/icons/light/bzr.svg",
                    "dark": "resources/icons/dark/bzr.svg"
                }
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "bzr.init",
                    "when": "config.bzr.enabled"
                }
            ],
            "scm/title": [
                {
                    "command": "bzr.init",
                    "group": "navigation",
                    "when": "config.bzr.enabled && !scmProvider && bzrOpenRepositoryCount == 0"
                }
            ]
        },
        "configuration": {
            "title": "Bzr",
            "properties": {
                "bzr.enabled": {
                    "type": "boolean",
                    "description": "%config.enabled%",
                    "default": true
                },
                "git.path": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "%config.path%",
                    "default": null,
                    "isExecutable": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "iconv-lite": "0.4.15",
        "vscode-nls": "2.0.2"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}